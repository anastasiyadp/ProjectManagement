                @Html.DropDownListFor(model => model.ImplementerId, ViewBag.Imp as SelectList);
                @Html.ValidationMessageFor(model => model.ImplementerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

